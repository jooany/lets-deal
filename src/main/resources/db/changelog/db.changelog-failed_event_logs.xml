<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create failed_event_logs table" author="jooany">
        <createTable tableName="failed_event_logs">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="topic" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="message_payload" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="error_reason" type="TEXT"/>
            <column name="registered_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create failed_event_logs sequence" author="jooany">
        <createSequence sequenceName="FAILED_EVENT_LOGS_SEQ" startValue="1" incrementBy="50"/>
    </changeSet>

</databaseChangeLog>
